!----------------------------------------------------------------------------!
! Version 1.0 September 1998: This file writes a new GTAP parameter          !
! file to:                                                                   !
!	- make all endowments mobile                                             !
!	- make production and preferences Cobb Douglas                           !
! 	- set RORDELTA = 0                                                       !
! It can only be run in conjunction with GTAP.TAB version 4.1 or higher as it!
! includes the switch for sluggish factors and ESUBT.                        !
! It is also typically run in conjunction with a particular closure.         !
! For more details, the reader is referred to GTAP technical paper No. 12.   !
!----------------------------------------------------------------------------!
!                                   FILES                                    !
!----------------------------------------------------------------------------!

FILE GTAPSETS # File with set specification #;
FILE (NEW) ALTERPAR # The file containing new parameters. # ;

!----------------------------------------------------------------------------!
!                                    SETS                                    !
!----------------------------------------------------------------------------!

Set REG # regions in the model #
    read elements from file GTAPSETS header "REG";

Set COMM # commodities #
    read elements from file GTAPSETS header "COMM";

Set MARG # commodities #
    read elements from file GTAPSETS header "MARG";

Set ACTS # activities #
    read elements from file GTAPSETS header "ACTS";

Set ENDW # endowments #
    read elements from file GTAPSETS header "ENDW";

!----------------------------------------------------------------------------!
!                      technology and preference parameters                  !
!----------------------------------------------------------------------------!

Coefficient (all,c,COMM)(all,r,REG) 
    SUBPAR(c,r)
    # the substitution parameter in the CDE minimum expenditure function #;

Coefficient (all,c,COMM)(all,r,REG)                          
    INCPAR(c,r)
    # expansion parameter in the CDE minimum expenditure function  #;

Coefficient (all,c,COMM)(all,r,REG)                           
    ESUBD(c,r)
    # Armington CES elast. of subs. for domestic/imported allocation #;

Coefficient (all,c,COMM)(all,r,REG)                           
    ESUBM(c,r)
    # Armington CES elast. of subs. for regional allocation of imports #;

Coefficient (all,c,ACTS)(all,r,REG)                           
    ESUBVA(c,r)
    # CES elast. of subs. for primary factors in production #;

Coefficient (all,e,ENDW)(all,r,REG)                           
    ETRAE(e,r)
    # CET elast. of transformation bet. sectors for sluggish primary factors #;

Coefficient (all, r, REG)                                     
    RORFLEX(r)
    # Expected rate of return flexibility parameter #;
      ! RORFLEX is the flexibility of expected net rate of return on capital 
        stock, in region r, with respect to investment. If a region's capital 
        stock increases by 1%, then it is expected that the net rate of return 
        on capital will decline by RORFLEX % !

Coefficient (Integer)                                            
    RORDELTA
    # Investment allocation binary coefficient #;
     !  RORDELTA is a binary Coefficient which determines the mechanism of 
        allocating investment funds across regions. When RORDELTA = 1, 
        investment funds are allocated across regions to equate the change 
        in the expected rates of return (i.e., rore(r)).  When RORDELTA = 0, 
        investment funds are allocated across regions to maintain the existing
        composition of capital stocks ! 

Coefficient (all,a,ACTS)(all,r,REG) 
    ESUBC(a,r)
    # CES elast. of subs. for intermediate inputs #;
 
Coefficient (all,a,ACTS)(all,r,REG)                             
    ESUBT(a,r)
    # CES elast. of subs. between primary factors and intermediate inputs #;

! Added by EC for GTAPv7 !
Coefficient (all,r,REG) 
    ESUBI(r)
    # Armington CES elast. of subs. for investment commodities #;

Coefficient (all,m,MARG) 
    ESUBS(m)
    # CES elast. of subs. for international transport margin services #;

Coefficient (all,r,REG) 
    ESUBG(r) 
    # CES elast. of subs. for government demands #;

Coefficient (all,a,ACTS)(all,r,REG) 
    ETRAQ(a,r)
    # CET elast. of transformation for commodities produced by industries #;

Coefficient (all,c,COMM)(all,r,REG) 
    ESUBQ(c,r)
    # 1/CES elast. of subs. for commodity sourcing #;


!----------------------------------------------------------------------------!

!----------------------------------------------------------------------------!
!                   Setting new model parameters                             !
!----------------------------------------------------------------------------!

Formula (all,c,COMM)(all,r,REG)
    SUBPAR(c,r) = 0 ;

Formula (all,c,COMM)(all,r,REG)
    INCPAR(c,r) = 1 ;

Formula (all,c,COMM)(all,r,REG)                           
    ESUBD(c,r) = 1;

Formula (all,c,COMM)(all,r,REG)                           
    ESUBM(c,r) = 1;

Formula (all,c,ACTS)(all,r,REG)                           
    ESUBVA(c,r) = 1;

Formula (all,e,ENDW)(all,r,REG)                           
    ETRAE(e,r) = -1;

Formula (all,i,REG)
        RORFLEX(i)= 10;

Formula
        RORDELTA = 1;

Formula (all,a,ACTS)(all,r,REG)  
    ESUBC(a,r) = 1;
 
Formula (all,a,ACTS)(all,r,REG)                             
    ESUBT(a,r) = 1;

Formula (all,r,REG) 
    ESUBI(r) = 1;

Formula (all,m,MARG) 
    ESUBS(m) = 1;

Formula (all,r,REG) 
    ESUBG(r) = 1;

Formula (all,a,ACTS)(all,r,REG) 
    ETRAQ(a,r) = -1;

Formula (all,c,COMM)(all,r,REG) 
    ESUBQ(c,r) = 1;


!----------------------------------------------------------------------------!
!                   Writing model parameters                                 !
!----------------------------------------------------------------------------!

Write 
    SUBPAR to file ALTERPAR header "SUBP";
    INCPAR to file ALTERPAR header "INCP";
    ESUBD  to file ALTERPAR header "ESBD";
    ESUBM  to file ALTERPAR header "ESBM";
    ESUBVA to file ALTERPAR header "ESBV";
    ETRAE  to file ALTERPAR header "ETRE";   !jmh mod!
    RORFLEX to file ALTERPAR header "RFLX";  !jmh mod!
    RORDELTA to file ALTERPAR header "RDLT"; !jmh mod!
    ESUBC  to file ALTERPAR header "ESBC"; ! EC !
    ESUBT  to file ALTERPAR header "ESBT"; ! EC !
    ESUBI  to file ALTERPAR header "ESBI"; ! EC !
    ESUBS  to file ALTERPAR header "ESBS"; ! EC !
    ESUBG  to file ALTERPAR header "ESBG"; ! EC !
    ETRAQ  to file ALTERPAR header "ETRQ"; ! EC !
    ESUBQ  to file ALTERPAR header "ESBQ"; ! EC !


